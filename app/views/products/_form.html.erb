<%= form_with(model: [@store, @product], local: true, html: { class: 'styled-form' }) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>

      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 1rem">
    <%= form.label :title, 'Título', style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :image, 'Carregar imagem' %>
    <br />
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.label :price, 'Preço' %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :description, 'Descrição' %>
    <%= form.select :category, Product.categories.keys.map { |category| [I18n.t("categories.product.#{category}"), category] }, prompt: "Selecione uma categoria" %>
  </div>

  <div>
    <%= form.label :description, 'Descrição' %>
    <%= form.text_area :description %>
  </div>

  <div style="margin-top: 1rem">
    <%= form.submit  %>
  </div>

<% end %>